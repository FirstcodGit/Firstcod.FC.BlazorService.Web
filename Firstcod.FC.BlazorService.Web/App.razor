<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="dataContext">
        <RouteView RouteData="@dataContext" DefaultLayout="typeof(_Layout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(_Layout)">
            <div class="card">
                <div class="card-header">
                    Not Found
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0 text-center">
                        <h1 style="font-size: 7em;">404</h1>
                        <h2 style="font-size: 2.45em;">Not Found</h2>
                    </blockquote>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>
